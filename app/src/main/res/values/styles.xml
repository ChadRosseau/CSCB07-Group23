<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!--    Styles for nav bar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/palatte_9</item>
    </style>

    <!--    Styles for "post" page-->
    <style name="gradeStyle">
        <item name="android:layout_width">@dimen/grade_width</item>
        <item name="android:layout_height">@dimen/course_height</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="programStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="courseStyle">
        <item name="android:layout_width">@dimen/course_width</item>
        <item name="android:layout_height">@dimen/course_height</item>
        <item name="android:layout_marginTop">@dimen/course_marginTop</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>